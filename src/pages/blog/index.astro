---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/HeaderNew.astro';
import { getTranslations } from '../../i18n/translations';
import { Calendar, BookOpen } from '@lucide/astro';

const t = getTranslations('es');

const allPosts = await getCollection('blog');
const posts = allPosts
	.filter(post => post.data.language === 'es')
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="es">
	<head>
		<meta name="google-site-verification" content="VEhcCnE5k8eIBpwht1sPwsPAcbFq6WjOY6-innOBVZY" />
		<BaseHead title={`Blog - ${t.site.title}`} description={t.site.description} />
		<style>
			main {
				max-width: 960px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}
			
			.page-title {
				text-align: center;
				margin-bottom: 3rem;
				padding: 2rem 0;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: white;
				border-radius: 12px;
			}
			
			.page-title h1 {
				font-size: 3rem;
				margin: 0;
			}
			
			.page-title p {
				font-size: 1.2rem;
				margin: 1rem 0 0 0;
				opacity: 0.9;
			}
			
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				background: white;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}
			ul li:hover {
				transform: translateY(-5px);
				box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
			}
			ul li:first-child img {
				width: 100%;
				height: 300px;
				object-fit: cover;
			}
			ul li:first-child .content {
				padding: 2rem;
				text-align: center;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-radius: 0;
			}
			ul li .content {
				padding: 1.5rem;
			}
			ul li a {
				display: block;
				color: inherit;
			}
			.title {
				margin: 0 0 0.5rem 0;
				color: rgb(var(--black));
				line-height: 1.3;
				font-weight: 600;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.9rem;
			}
			ul li a:hover .title {
				color: #667eea;
			}
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			@media (max-width: 720px) {
				main {
					padding: 1rem;
				}
				.page-title h1 {
					font-size: 2rem;
				}
				ul {
					gap: 1rem;
				}
				ul li {
					width: 100%;
				}
				ul li:first-child {
					margin-bottom: 1rem;
				}
				ul li:first-child .title {
					font-size: 1.8rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="page-title">
				<h1><BookOpen size={32} style="display: inline; margin-right: 0.5rem; vertical-align: middle;" /> Blog</h1>
				<p>Recursos, tutoriales y gu√≠as para crear ebooks con inteligencia artificial</p>
			</div>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<div class="content">
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<Calendar size={14} style="display: inline; margin-right: 0.3rem; vertical-align: middle;" />
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
