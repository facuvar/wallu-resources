---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/HeaderNew.astro';
import { getTranslations, type Language } from '../i18n/translations';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;

// Get current language from URL
const currentPath = Astro.url.pathname;
let currentLang: Language = 'es';
let blogUrl = '/blog';

if (currentPath.startsWith('/en/')) {
  currentLang = 'en';
  blogUrl = '/en/blog';
} else if (currentPath.startsWith('/pt/')) {
  currentLang = 'pt';
  blogUrl = '/pt/blog';
}

const t = getTranslations(currentLang);
---

<html lang={currentLang}>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				margin-bottom: 2rem;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
				transition: transform 0.3s ease;
			}
			.hero-image img:hover {
				transform: scale(1.02);
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2rem;
				color: rgb(var(--gray-dark));
				background: white;
				border-radius: 12px;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
				line-height: 1.7;
			}
			.prose h1, .prose h2, .prose h3 {
				color: #2d3748;
			}
			.prose h2 {
				border-bottom: 2px solid #667eea;
				padding-bottom: 0.5rem;
				margin-top: 2rem;
			}
			.prose h3 {
				color: #667eea;
				margin-top: 1.5rem;
			}
			.prose a {
				color: #667eea;
				text-decoration: none;
				border-bottom: 1px solid transparent;
				transition: border-color 0.3s ease;
			}
			.prose a:hover {
				border-bottom-color: #667eea;
			}
			.prose code {
				background: #f7fafc;
				padding: 0.2rem 0.4rem;
				border-radius: 4px;
				font-size: 0.9em;
				border: 1px solid #e2e8f0;
			}
			.prose blockquote {
				border-left: 4px solid #667eea;
				padding-left: 1rem;
				margin: 1.5rem 0;
				font-style: italic;
				background: #f8f9ff;
				padding: 1rem;
				border-radius: 0 8px 8px 0;
			}
			.prose ul, .prose ol {
				margin: 1rem 0;
				padding-left: 1.5rem;
			}
			.prose li {
				margin: 0.5rem 0;
			}
			.title {
				margin-bottom: 2rem;
				padding: 2rem 0;
				text-align: center;
				line-height: 1.2;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				color: white;
				border-radius: 12px;
				margin-top: -2rem;
				margin-left: -2rem;
				margin-right: -2rem;
				padding: 3rem 2rem;
			}
			.title h1 {
				margin: 0 0 1rem 0;
				font-size: 2.5rem;
				font-weight: bold;
			}
			.date {
				margin-bottom: 0.5rem;
				color: rgba(255, 255, 255, 0.9);
				font-size: 1rem;
			}
			.last-updated-on {
				font-style: italic;
				opacity: 0.8;
			}
			.back-to-blog {
				display: inline-block;
				margin: 2rem auto;
				padding: 0.8rem 1.5rem;
				background: #667eea;
				color: white;
				text-decoration: none;
				border-radius: 8px;
				transition: all 0.3s ease;
				text-align: center;
			}
			.back-to-blog:hover {
				background: #5a67d8;
				transform: translateY(-2px);
			}
			@media (max-width: 768px) {
				main {
					width: 100%;
					padding: 0;
				}
				
				.hero-image {
					margin-bottom: 1rem;
					padding: 0 1rem;
				}
				
				.prose {
					width: 100%;
					max-width: 100%;
					margin: 0;
					padding: 1.5rem;
					border-radius: 0;
					box-shadow: none;
				}
				
				.title {
					margin-left: -1.5rem;
					margin-right: -1.5rem;
					padding: 2rem 1.5rem;
					margin-top: -1.5rem;
				}
				
				.title h1 {
					font-size: 2rem;
					line-height: 1.2;
				}
				
				.back-to-blog {
					margin: 2rem 0;
					display: block;
					width: fit-content;
					margin-left: auto;
					margin-right: auto;
				}
			}
			
			@media (max-width: 480px) {
				.prose {
					padding: 1rem;
				}
				
				.title {
					margin-left: -1rem;
					margin-right: -1rem;
					padding: 1.5rem 1rem;
					margin-top: -1rem;
				}
				
				.title h1 {
					font-size: 1.6rem;
					line-height: 1.1;
				}
				
				.date {
					font-size: 0.9rem;
				}
				
				.prose h2 {
					font-size: 1.4rem;
					margin-top: 1.5rem;
				}
				
				.prose h3 {
					font-size: 1.2rem;
					margin-top: 1rem;
				}
				
				.prose p {
					margin-bottom: 1.2rem;
				}
				
				.prose ul, .prose ol {
					padding-left: 1.2rem;
				}
				
				.prose blockquote {
					padding: 0.8rem;
					margin: 1rem 0;
					font-size: 0.95rem;
				}
				
				.back-to-blog {
					padding: 0.7rem 1.2rem;
					font-size: 0.9rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										{t.blog.lastUpdated} <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
					</div>
					<slot />
					<div style="text-align: center; margin-top: 3rem;">
						<a href={blogUrl} class="back-to-blog">{t.blog.backToBlog}</a>
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
