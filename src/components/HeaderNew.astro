---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import LanguageSelector from './LanguageSelector.astro';
import { getTranslations, type Language } from '../i18n/translations';

// Get current language from URL
const currentPath = Astro.url.pathname;
let currentLang: Language = 'es';

if (currentPath.startsWith('/en/')) {
  currentLang = 'en';
} else if (currentPath.startsWith('/pt/')) {
  currentLang = 'pt';
}

const t = getTranslations(currentLang);
---

<header>
	<nav>
		<div class="logo">
			<a href="/">
				<img src="/logo_wallu.png" alt="Wallu Resources" />
			</a>
		</div>
		<div class="internal-links">
			<HeaderLink href={currentLang === 'es' ? '/' : `/${currentLang}/`}>{t.nav.home}</HeaderLink>
			<HeaderLink href={currentLang === 'es' ? '/blog' : `/${currentLang}/blog`}>{t.nav.blog}</HeaderLink>
			<HeaderLink href={currentLang === 'es' ? '/about' : `/${currentLang}/about`}>{t.nav.about}</HeaderLink>
		</div>
		<div class="social-links">
			<LanguageSelector currentLang={currentLang} />
			<a href="https://wallu.app" target="_blank">
				<span class="sr-only">{t.footer.social.visit}</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8s3.58 8 8 8 8-3.58 8-8-3.58-8-8-8zm3.707 9.293l-1.414 1.414L8 8.414l-2.293 2.293-1.414-1.414L6.586 7 4.293 4.707l1.414-1.414L8 5.586l2.293-2.293 1.414 1.414L9.414 7l2.293 2.293z"
					></path></svg
				>
			</a>
			<a href="https://instagram.com/wallu.app" target="_blank">
				<span class="sr-only">{t.footer.social.instagram}</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0h.003zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599.28.28.453.546.598.92.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.47 2.47 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.478 2.478 0 0 1-.92-.598 2.48 2.48 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233 0-2.136.008-2.388.046-3.231.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92.28-.28.546-.453.92-.598.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045v.002zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92zm-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217zm0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334z"
					></path></svg
				>
			</a>
			<a href="https://youtube.com/@wallu" target="_blank">
				<span class="sr-only">{t.footer.social.youtube}</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.007 2.007 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.007 2.007 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31.4 31.4 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.007 2.007 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A99.788 99.788 0 0 1 7.858 2h.193zM6.4 5.209v4.818l4.157-2.408L6.4 5.209z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	.logo {
		display: flex;
		align-items: center;
	}

	.logo a {
		display: flex;
		align-items: center;
		text-decoration: none;
		padding: 0.5rem 0;
	}

	.logo img {
		height: 40px;
		width: auto;
		transition: transform 0.3s ease;
	}

	.logo img:hover {
		transform: scale(1.05);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	@media screen and (max-width: 768px) {
		header {
			padding: 0 0.5em !important;
		}
		
		nav {
			flex-direction: column !important;
			align-items: stretch !important;
			gap: 0.5rem !important;
		}
		
		.logo {
			justify-content: center !important;
			padding: 0.5rem 0 !important;
		}
		
		.logo img {
			height: 32px !important;
		}
		
		.internal-links {
			order: 2 !important;
			width: 100% !important;
			justify-content: center !important;
			gap: 0.5rem !important;
			padding: 0.5rem 0 !important;
			border-top: 1px solid rgba(var(--gray-light), 50%) !important;
		}
		
		.internal-links a {
			padding: 0.5em 0.8em !important;
			font-size: 0.9rem !important;
		}
		
		.social-links {
			order: 3 !important;
			justify-content: center !important;
			gap: 0.5rem !important;
			padding: 0.5rem 0 !important;
			border-top: 1px solid rgba(var(--gray-light), 50%) !important;
		}
		
		.social-links a {
			padding: 0.5em !important;
		}
		
		.social-links svg {
			width: 24px !important;
			height: 24px !important;
		}
	}

	@media (max-width: 480px) {
		.internal-links a {
			padding: 0.4em 0.2em;
			font-size: 0.85rem;
		}
		
		.social-links svg {
			width: 20px !important;
			height: 20px !important;
		}
	}
</style>
