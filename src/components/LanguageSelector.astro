---
import { languages, type Language } from '../i18n/translations';
import { Flag } from '@lucide/astro';

export interface Props {
  currentLang: Language;
}

const { currentLang } = Astro.props;
---

<div class="language-selector">
  <a href="/" class={`lang-link ${currentLang === 'es' ? 'active' : ''}`}>
    <Flag size={16} />
    <span>ES</span>
  </a>
  <span class="separator">|</span>
  <a href="/en/" class={`lang-link ${currentLang === 'en' ? 'active' : ''}`}>
    <Flag size={16} />
    <span>EN</span>
  </a>
  <span class="separator">|</span>
  <a href="/pt/" class={`lang-link ${currentLang === 'pt' ? 'active' : ''}`}>
    <Flag size={16} />
    <span>PT</span>
  </a>
</div>


<style>
  .language-selector {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }

  .lang-link {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    color: #333;
    text-decoration: none;
    padding: 0.3rem 0.5rem;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .lang-link:hover {
    color: #007acc;
    background: rgba(0, 122, 204, 0.1);
  }

  .lang-link.active {
    color: #007acc;
    font-weight: 600;
  }

  .lang-link.active svg {
    color: #007acc;
  }

  .separator {
    color: #ccc;
    font-size: 0.8rem;
  }

  @media (max-width: 768px) {
    .language-selector {
      gap: 0.3rem;
      font-size: 0.8rem;
    }
    
    .lang-link {
      padding: 0.2rem 0.3rem;
    }
  }
</style>

